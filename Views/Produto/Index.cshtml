@model List<Loja.Models.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<h2>Lista de Produtos</h2>

<form asp-action="Categoria" method="get" class="mb-3">
    <label for="categoria">Filtrar por categoria:</label>
    <select name="categoria" id="categoria" class="form-select d-inline-block w-auto">
        <option>Eletrônicos</option>
        <option>Roupas</option>
        <option>Livros</option>
    </select>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Categoria</th>
            <th>Em Estoque</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Nome</td>
                <td>@produto.Preco.ToString("C")</td>
                <td>@produto.Categoria</td>
                <td>@(produto.EmEstoque ? "Sim" : "Não")</td>
                <td>
                    <a asp-action="Detalhes" asp-route-id="@produto.Id" class="btn btn-sm btn-info">Ver Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h4>Exportar produtos:</h4>
<a asp-action="ExportarCsv" class="btn btn-success">Exportar CSV</a>
<a asp-action="RelatorioTxt" class="btn btn-secondary">Relatório TXT</a>
<a asp-action="ExportarJson" class="btn btn-warning">Exportar JSON</a>

<hr />

<h4>Visualizar JSON via AJAX:</h4>
<button class="btn btn-primary mb-2" onclick="carregarJson()">Obter JSON</button>
<pre id="resultadoJson" class="border p-2 bg-light"></pre>

@section Scripts {
    <script>
        function carregarJson() {
            fetch('/Produto/ObterProdutosJson')
                .then(response => response.json())
                .then(dados => {
                    document.getElementById("resultadoJson").innerText = JSON.stringify(dados, null, 2);
                });
        }
    </script>
}

