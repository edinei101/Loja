@model List<Loja.Models.Produto>

@{
    ViewData["Title"] = "Produtos por Categoria";
}

<h2>Produtos - Categoria: @ViewBag.Categoria</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">Nenhum produto encontrado nesta categoria.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Preço</th>
                <th>Em Estoque</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.Nome</td>
                    <td>@produto.Preco.ToString("C")</td>
                    <td>@(produto.EmEstoque ? "Sim" : "Não")</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Index" class="btn btn-primary">Ver Todos os Produtos</a>

